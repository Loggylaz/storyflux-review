{
  "name": "storyflux",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "postinstall": "pnpm -r --if-present run build",
    "dev": "concurrently -n server,web -c green,cyan \"pnpm -C apps/server dev\" \"pnpm -C apps/web dev\"",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "db:push": "pnpm -C packages/db prisma db push",
    "db:migrate": "pnpm -C packages/db prisma migrate dev",
    "db:studio": "pnpm -C packages/db prisma studio"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@types/node": "^20.12.12",
    "concurrently": "^9.2.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": "prettier --write"
  }
}
